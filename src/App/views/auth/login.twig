{% extends 'layout.twig' %}
{% block title %}
    Sign in
{% endblock %}

{% block content %}
    <form method="POST">
        <div class="form-group">
            <label for="email">Email address</label>
            <input type="email" required class="form-control" id="email" placeholder="Email">
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" required class="form-control" id="password" placeholder="Password">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary"><i class="fa fa-sign-in"></i> Sign in</button>
            <a href="/auth/restore" class="btn btn-link">Forgot your password?</a>
        </div>
    </form>

{% endblock %}