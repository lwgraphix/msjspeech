{% extends 'layout.twig' %}
{% block title %}
    Restore account access
{% endblock %}

{% block content %}
    <form method="POST">
        <div class="form-group">
            <label for="email">Email address</label>
            <input name="email" type="email" required class="form-control" id="email" placeholder="Email">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary"><i class="fa fa-unlock-alt"></i> Restore account access</button>
        </div>
    </form>
{% endblock %}