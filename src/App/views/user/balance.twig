{% extends 'layout.twig' %}

{% block content_header %}

    {% if admin_mode is defined %}
        <div class="alert bg-blue-gradient alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
            <h4><i class="icon fa fa-user"></i> Admin mode</h4>
            You are viewing <b>{{ view_user.fullname }} (<a target="_blank" href="/user/profile?user_id={{ view_user.id }}">{{ view_user.email }}</a>)</b> balance
        </div>
    {% endif %}

    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title" style="width: 100%">Balance</h3>
        </div>
        <div class="box-body">
            {% set user_balance = (admin_mode is defined) ? view_user.balance : user.balance %}
            <h4>Your current balance: {{ user_balance|number_format(2, '.', ',') }}$</h4>

            {% if admin_mode is defined %}
                <button class="btn btn-primary" data-toggle="modal" data-target="#add-transaction"><i class="fa fa-plus"></i> Create transaction</button>
                <div class="modal fade" id="add-transaction">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span></button>
                                <h4 class="modal-title">Create new transaction to user {{ view_user.fullName }}</h4>
                            </div>
                            <form method="post" action="/admin/users/transactions/add">
                                <div class="modal-body">
                                    <input type="hidden" name="user_id" value="{{ view_user.id }}" />
                                    <div class="form-group">
                                        <label for="amount">Amount <span style="color: red">*</span></label>
                                        <input name="amount" type="number" required class="form-control" id="amount">
                                    </div>
                                    <div class="form-group">
                                        <label for="description">Description <span style="color: red">*</span></label>
                                        <input name="description" type="text" required class="form-control" id="description" placeholder="Reason">
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-primary">Create transaction</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block title %}
    Transaction history
{% endblock %}

{% block content %}
    {% if history|length > 0 %}
        <table class="table table-bordered">
            <thead>
            <tr>
                <th>#</th>
                <th>Amount</th>
                <th>Date</th>
                <th>Description</th>
            </tr>
            </thead>
            <tbody>
                {% for transaction in history %}
                    <tr>
                        <td>{{ transaction.id }}</td>
                        <td><span class="text-{{ (transaction.amount < 0) ? 'danger' : 'success' }}">{{ transaction.amount|number_format(2, '.', ',') }}$</span></td>
                        <td>{{ transaction.timestamp|replace({'-': '/'}) }}</td>
                        <td>{{ transaction.description }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>You don't have any transactions.</p>
    {% endif %}

{% endblock %}