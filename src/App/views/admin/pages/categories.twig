{% extends 'layout.twig' %}
{% block title %}
    Category tree
{% endblock %}

{% block content_header %}
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title" style="width: 100%">Create new category</h3>
        </div>
        <div class="box-body">
            <form method="post">
                <div class="form-group">
                    <label for="category_name">Category name <span style="color: red">*</span></label>
                    <input name="category_name" type="text" required class="form-control" id="category_name">
                </div>
                <div class="form-group">
                    <label for="parent_category">Parent category <span style="color: red">*</span></label>
                    <select class="form-control" id="parent_category">
                        <option value="-1">Root</option>
                        {% for category in categories %}
                            <option value="{{ category.id }}">{{ category.name }}</option>
                        {% endfor %}
                    </select>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

{% block content %}

{% endblock %}