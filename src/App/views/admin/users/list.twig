{% extends 'layout.twig' %}
{% block title %}
    Members list
{% endblock %}

{% block content %}
    <a href="/admin/email/send/1" class="btn btn-primary" style="margin-bottom: 10px"><i class="fa fa-paper-plane"></i> Send mass email</a>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>#</th>
            <th>Email</th>
            <th>Name</th>
            <th>Username</th>
            <th>Parent name</th>
            <th>Parent email</th>
            <th>Created at</th>
            <th>Last login</th>
            <th>Payed membership fee</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td><a  href="/user/profile?user_id={{ user.id }}">{{ user.email }}</a></td>
                <td>{{ user.first_name }} {{ user.last_name }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.parent_first_name }} {{ user.parent_last_name }}</td>
                <td>{{ user.parent_email }}</td>
                <td>{{ user.created_at|date('m/d/Y h:i A') }}</td>
                <td>{{ (user.last_login) ? user.last_login|date('m/d/Y h:i A') : '-' }}</td>
                <td><span class="text-{{ user.payed_fee ? 'success' : 'danger' }}">{{ user.payed_fee ? user.payed_fee|number_format(2, '.', ',') ~ '$' : 'No' }}</span></td>
                <td>{{ roles[user.role] }}</td>
                <td>
                    <a  href="/user/balance?user_id={{ user.id }}" class="btn btn-primary btn-xs">Transactions</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <script>
        $(function() {
            $("table").tablesorter({
            });
        });
    </script>
{% endblock %}